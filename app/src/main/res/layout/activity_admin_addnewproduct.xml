<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddnewproductActivity">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:id="@+id/selectproductimage"
        android:scaleType="centerCrop"
        android:cropToPadding="false"
        android:src="@drawable/select_product_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/productname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectproductimage"
        android:layout_marginTop="40dp"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:hint="Product Name"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textinputs"/>

    <EditText
        android:id="@+id/descrption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productname"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:hint="Product Description Here"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textinputs"/>
    <EditText
        android:id="@+id/productprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descrption"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:hint="Product Price"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textinputs"/>
    <Button
        android:id="@+id/newproductbtn"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:background="@drawable/input2"
        android:layout_below="@+id/productprice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Add Product"/>
</RelativeLayout>